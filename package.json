{
  "name": "gauge-ts",
  "version": "0.1.1",
  "description": "Typescript language runner for gauge",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "biome lint . --apply",
    "check": "biome ci .",
    "format": "biome format . --write",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test:coverage": "jest --verbose --coverage --detectOpenHandles --forceExit",
    "codecov": "codecov",
    "test": "jest --verbose --detectOpenHandles --forceExit",
    "gen-proto": "sh genproto.sh",
    "prepublishOnly": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bugdiver/gauge-ts.git"
  },
  "keywords": ["gauge", "Acceptance Test", "Typescript", "Automation"],
  "author": "BugDiver <vinayshankar00@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bugdiver/gauge-ts/issues"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.8",
    "google-protobuf": "^3.13.0",
    "klaw-sync": "^6.0.0",
    "ts-node": "8.7.0",
    "typescript": "^5.0.4",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/google-protobuf": "^3.7.3",
    "@types/jest": "^24.9.1",
    "@types/klaw-sync": "^6.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "codecov": "^3.7.2",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "jest": "^29.7.0",
    "jest-mock-process": "^2.0.0",
    "jest-silent-reporter": "^0.6.0",
    "jest-ts-auto-mock": "^2.1.0",
    "ts-auto-mock": "^3.7.3",
    "ts-jest": "^29.1.4",
    "ttypescript": "^1.5.12"
  }
}
