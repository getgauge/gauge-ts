{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@lib/*": ["./src/*"]
    }
  },
  "include": ["tests/**/*", "gen/**/*"],
  "exclude": ["node_modules/"]
}
